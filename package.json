{
    "name": "civetkern",
    "version": "0.3.6",
    "description": "civet database",
    "repository": {
        "type": "git",
        "url": "https://github.com/webbery/civetkern.git"
    },
    "scripts": {
        "install": "npm install -g prebuild && npm run gqlite && (prebuild-install || node-gyp rebuild)",
        "rebuild": "node-gyp rebuild --verbose",
        "prebuild": "npm run gqlite && prebuild --runtime --all --strip",
        "build": "node-gyp configure && node-gyp build",
        "test": "node_modules/.bin/mocha test/function.test.js",
        "test:performance": "node_modules/.bin/mocha --timeout 15000 test/performance.test.js",
        "gqlite": "((cd gqlite && git pull) || (git clone --recursive https://github.com/webbery/gqlite.git gqlite && cd gqlite)) && cmake -B ${github.workspace}/gqlite/build -DCMAKE_BUILD_TYPE=Release && cmake --build ${github.workspace}/gqlite/build --config Release",
        "upload": "prebuild --runtime --upload ${GITHUB_TOKEN}"
    },
    "keywords": [
        "nodejs",
        "c++",
        "civet",
        "addon",
        "gqlite"
    ],
    "gypfile": true,
    "author": "webberg",
    "license": "MIT",
    "dependencies": {
        "node-addon-api": "^3.0.2",
        "prebuild-install": "^7.1.1"
    },
    "devDependencies": {
        "@vue/cli": "^4.5.11",
        "chai": "^4.2.0",
        "mocha": "^8.2.1",
        "node-gyp": "^8.1.0"
    }
}
